<section class="cst_col_hero_sec">
    <div class="cst_col_hero" style="background-color: {{section.settings.bg_color}}; border: 0px solid {{section.settings.border_color}}">
        <div class="cst_col_hero_ini">
        <h2 class="cst_col_hero_title" style="color: {{section.settings.head_color}}">{{ section.settings.heading }}</h2>
        <p class="cst_col_hero_des" style="color: {{section.settings.description_color}}">{{ section.settings.description }}</p>
          <p class="collection-hero-cst_border_color"style="color" default="#000000"</p>
      </div>
    </div>
</section>
{% schema %}
{
"name": "Cst Col Hero Section",
"settings": [
    {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#6387fb"
    },
    {
    "type": "color",
    "id": "border_color",
    "label": "border Color",
    "default": "#ff0000"
    },
    {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "Hydration for the pursuit of everything."
    },
    {
    "type": "color",
    "id": "head_color",
    "label": "head Color",
    "default": "#ffffff"
    },
    {
    "type": "text",
    "id": "description",
    "label": "description",
    "default": "Shop our hydration products to help you #stayfluid."
    },
    {
    "type": "color",
    "id": "description_color",
    "label": "Description Color",
    "default": "#d7e0fb"
    }
]
}
{% endschema %}