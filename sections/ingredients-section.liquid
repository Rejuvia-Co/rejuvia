{{ 'ingredients-info.css' | asset_url | stylesheet_tag }}

<div class="ingredients-info-container">
  <h2 class="section-title--h2 section-heading">
    {{ section.settings.heading }}
  </h2>
  <p class="section-subheading">{{ section.settings.subheading }}</p>

    <div class="ingredients-grid-container">
        {% for item in section.blocks %}
            <div class="grid-item-card--ingredient">
              {{ item.settings.image | image_url: width: 64 | image_tag: alt: item.settings.description }}
              <div class="description_card_container">
                  <p class="item-title">{{ item.settings.title }}</p>
                  <p class="description">{{ item.settings.description }}</p>
              </div>
            </div>
          {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Ingredients Info Section",
  "tag": "section",
  "class": "ingredients-info-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients Info Section"
    }
  ]
}
{% endschema %}
