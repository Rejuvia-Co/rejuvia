<style>
  #ingredients {padding-top: 2em;}
  #ingredients > .heading {color: #0A0A0A; text-align: center; font-size: 1.286em; font-family: "Nexa"; font-style: italic; text-transform: none; line-height: 1.4em;}
  #ingredients h2 {letter-spacing: normal; color: #0A0A0A; text-align: center; font-size: 3.214em; font-family: "Nexa"; font-weight: 800; text-transform: none; line-height: 1.4em;}

  #ingredients {font-family: "Nexa"; position: relative; padding: {{section.settings.section_padding_desktop}}; background-color: {{section.settings.bg_color}};}
  #ingredients .content {background-color: {{section.settings.text_bg_color}};}
  #ingredients .title {color: {{section.settings.title_color}}; font-size: 3.25em; text-transform: none; margin: 0.3em 0;}
  #ingredients .text {color: {{section.settings.text_color}};}
  #ingredients .btn {color: {{section.settings.btn_color}}; background-color: {{section.settings.btn_bg}}; border: 2px solid {{section.settings.btn_bg}};}
  #ingredients .btn:hover {background-color: {{section.settings.btn_hover_bg}}; border: 2px solid {{section.settings.btn_hover_bg}}; color: #ffffff;}
  #ingredients .wrap {position: relative; max-width: {{section.settings.text_width}}em; width: 100%; padding: {{section.settings.text_padding_desktop}};}
  #ingredients .img {width: 100%; height: 100%; background-size: cover; background-position: center; background-repeat: no-repeat;}
  #ingredients p {color: inherit;}
  #ingredients {margin: 0;}
  #ingredients {margin: 2em 0;}
  #ingredients .ingredient {max-width: 100%;}
  #ingredients .wrap .info .heading {font-size: 1.286em; font-weight: 600; letter-spacing: 1px; text-transform: uppercase;}
  #ingredients .wrap .info .subheading {font-size: 1em; letter-spacing: normal;}
  #ingredients .ingredient img {max-width: 70px;}  
  
  @media all and (min-width: {{settings.breakpoint_tablet | plus: 1}}px){
    #ingredients .text-adapts-to-image .img {padding-top: {{section.settings.image_height_desktop}};}
  }
  @media all and (max-width: {{settings.breakpoint_tablet}}) and (min-width: {{settings.breakpoint_mobile | plus: 1}}px){
    #ingredients .text-adapts-to-image .img {padding-top: {{section.settings.image_height_tablet}};}
    #ingredients .wrap .info .heading {font-size: 1em;}
    #ingredients .ingredient {margin-bottom: 1em;}
  }
  @media all and (max-width: {{settings.breakpoint_mobile}}){
    #ingredients {padding: {{section.settings.section_padding_mobile}};}
    #ingredients .wrap {width: 100% !important; padding: {{section.settings.text_padding_mobile}};}
    #ingredients .container {padding: 0;}
    #ingredients .title {font-size: 1.7em;}
    #ingredients .btn {width: 100%;}
    #ingredients .img {padding-top: {{section.settings.image_height_mobile}};}
    #ingredients .wrap .info {margin-left: 1.6em;}
    #ingredients .wrap .info .heading {font-size: 1em; text-align: left;}
    #ingredients .info .subheading {text-align: left;}
    #ingredients > .heading {font-size: 1.143em;}
    #ingredients h2 {font-size: 1.714em; max-width: 11em; margin: 0 auto; line-height: 1.3em;}
    #ingredients {margin: 0 0 2em;}
  }
</style>

<section id="ingredients">
  <div class="heading text-center">{{ section.settings.heading }}</div>
  <h2 class="subheading text-center">{{ section.settings.subheading }}</h2>
  <div {% unless section.settings.full_width %}class="container"{% endunless %}>
    <div class="grid-full content {{section.settings.image_position}} {% if section.settings.height == 'image' %}text-adapts-to-image align-items-center{% endif %}">
      {%- if section.settings.image != blank -%}
      <div class="grid__item image-wrap {{section.settings.image_width}} small--one-whole">
        <div id="image-slide-{{ section.id }}" style="height: 100%; padding: 2em;">
          <div class="img lazyload" data-bgset="{% include 'lazy_src', image: section.settings.image %}"></div>
        </div>
      </div>
      {%- endif -%}
      <div class="grid__item wrapper flex-1 small--one-whole flex justify-content-{{section.settings.text_position}}">
        <div class="wrap text-{{section.settings.text_align}} small--text-{{section.settings.text_align_mobile}}">
          {% for block in section.blocks %}
          	<div class="ingredient grid">
              
              <div class="grid__item one-sixth medium--one-third">
                {% if block.settings.image != nil %}
                  <img class="lazyload" data-sizes="auto" src="{% render 'image_placeholder', image: block.settings.image %}" data-srcset="{% render 'lazy_src', image: block.settings.image %}" />
				{% endif %}
              </div>
              <div class="grid__item five-sixths medium--two-thirds flex align-items-center">
                <div class="info">
                  <div class="heading">
                    {{ block.settings.heading }}
                  </div>
                  <div class="subheading">
                    {{ block.settings.subheading }}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

