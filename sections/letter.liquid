<article class="letter">
	<h2>{{ section.settings.heading }}</h2>
	{{ section.settings.body }}
	{% unless section.settings.signatures == blank %}
		<img src="{{ section.settings.signatures | img_url: '200x' }}" />
	{% endunless %}
	<span class="byline_1">{{ section.settings.byline_1 }}</span>
	<span class="byline_2">{{ section.settings.byline_2 }}</span>
</article>

<style>
	article.letter {
    max-width: 580px;
    margin-left: auto;
    margin-right: auto;
    padding: 50px 0;
	}
	article.letter img {
		display: block;
	}
	.byline_1, .byline_2 {
		display: block;
	}
	.byline_1 { font-weight: bold; }
	.byline_2 { font-style: italic; }
	@media (max-width: 500px) {
		article.letter { width: 90%; }
	}
</style>


{% schema %}
{
	"name": "Letter",
	"class": "hero-image-section",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "richtext",
			"id": "body",
			"label": "Body Text"
		},
		{
			"type": "image_picker",
			"id": "signatures",
			"label": "Signature Images"
		},
		{
			"type": "text",
			"id": "byline_1",
			"label": "Byline #1 (Bold)"
		},
		{
			"type": "text",
			"id": "byline_2",
			"label": "Byline #2 (Italic)"
		}
	],
	"presets": [{ "name": "Letter"}]
}
{% endschema %}
