<style>
  .logo-bar-section {
    max-width: {{ section.settings.logo_width }};
    display: inline-block;
    margin: 0px 0px 0px;
    text-align: center;
  }
  .logo-bar-section > img{
 	max-width:90% !important;
  }
  .section-container{  	
    text-align:center;
    padding:20px 0px 0px 10px;
    background-color: {{section.settings.bg_color}};
    border-color: #000000;
    border: 0px solid;
  }
  .title-section-logos{
  	font-weight: 400;
    text-transform: none;
    font-style: italic;    
    margin-bottom:0px;
    color: #000000;       
    font-size: 18px;
    line-height: 1.5;
  }
  .custom-container{
  	padding:{{section.settings.padding_section_logo}};
    margin-top:20px;
    margin-bottom:0px;
  }
  @media(max-width:500px){
     .custom-container{
      padding:{{section.settings.padding_section_mobile_logo}};
      margin-top:0px;
    }
  }
  @media(max-width:749px){
    .cst_mob_hide{
      display: none !important;
    }
  }
  .cst_mob_show{
    display: none;
  }
  @media(max-width:749px){
    .cst_mob_show{
      display: block;
    }
  }
  .cst_logo_slider_li
  {
    width: 100%;
    max-width: 100%;
  }
  .cst_logo_slider_li img
  {
    display: block;
    width: 100%;
    max-width: 100% !important;
  }
  .cst_logo_slider .slick-dots
  {
    margin: -60px 0 40px 0;
    padding: 1em;
  }
  .cst_logo_slider .slick-dots li.slick-active button
  {
    background: #000;
  }
</style>
<div class="custom-container section-logo">
	<div class="section-container">
      <div class="title-section-logos" >{{ section.settings.title | escape }}</div>
      {% if section.blocks.size > 0 %}
      <ul class="cst_mob_hides slider-for slide-text">
         {% for block in section.blocks %}
         <li class="logo-bar-text" {{ block.shopify_attributes }}>
              {% if block.settings.text_title != blank %}
              	{{block.settings.text_title}}
              {% endif %}
            </li>
        {% endfor %}
      </ul>
        <ul class="cst_mob_hides slider-nav">
          {% for block in section.blocks %}
            <li class="logo-bar-section" {{ block.shopify_attributes }}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
              {% endif %}
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | img_url: '200x200' }}"
                  width="120"
                  height="120"
                  alt="{{ block.settings.image.alt }}"
                  class="logo-bar__image"
                />
              {% else %}
                {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
<!--         <ul class="cst_logo_slider cst_mob_show">
          {% for block in section.blocks %}
            <li class="logo-bar-section cst_logo_slider_li" {{ block.shopify_attributes }}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
              {% endif %}
              {% if block.settings.image != blank %}
                {{ block.settings.image | img_url: '200x200', scale: 3 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
              {% else %}
                {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ul> -->
      {% endif %}
      {% if section.settings.customtext != blank %}
      <div class="block-star-reviews">
        <div id="text-reviews" > 
          <p >{{section.settings.customtext}}</p>
          <div class="star-rating" style="margin-right:0px;letter-spacing:0px;"> 
            ★★★★★
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  
</div>
