<style>
  #our-quality {font-family: "Nexa"; padding: 0;}
  #our-quality .icons-section {padding: 3em 0 6em;}
  #our-quality .icon-item {max-width: 15em; margin: 0 3em;}
  #our-quality .icon-item .heading {font-size: 1.286em; font-weight: 600; letter-spacing: 1px; text-transform: uppercase; max-width: 10em; padding: 1em 0;}
  #our-quality > .heading {color: #0A0A0A; text-align: center; font-size: 1.286em; font-family: "Nexa"; font-style: italic; text-transform: none; line-height: 1.4em;}
  #our-quality h2 {letter-spacing: normal; color: #0A0A0A; text-align: center; font-size: 1.786em; font-family: "Nexa"; font-weight: 800; text-transform: none; line-height: 1em; max-width: 40em; margin: 0 auto;}
  #our-quality .icon-item .text {color: #0A0A0A; font-size: 1em; letter-spacing: normal;}
  #our-quality .btn {background-color: #EAC78B; font-weight: 700; letter-spacing: normal; color: #0A0A0A; text-transform: none; border-radius: 2em; padding: 1.2em 4em;}
  
  @media all and (max-width: 900px) {
    #our-quality .icons-section {flex-direction: column; align-items: center;}
    #our-quality h2 {max-width: 19em; margin: 1em auto 0; font-size: 1.286em;}
    #our-quality .icon-item .heading {font-size: 1em; max-width: none; margin-top: 1em;}
    #our-quality .icon-item {max-width: 20em;}
    #our-quality h2 {font-size: 1.714em;}
  }
  
  @media all and (max-width: 600px) {
    #our-quality .icons-section {padding: 1em 0 3em;}
    #our-quality h2 {max-width: 14em;}
  }
</style>

<section id="our-quality">
  <div class="heading">{{ section.settings.heading }}</div>
  <h2>{{ section.settings.subheading }}</h2>
  <div class="icons-section flex justify-content-center">
    {% for icon in section.blocks %}
      <div class="icon-item flex justify-content-start align-items-center direction-column">
        {% if icon.settings.image != nil %}
          <div class="image zoom-in">
            <img class="lazyload" data-sizes="auto" src="{% render 'image_placeholder', image: icon.settings.image %}" data-srcset="{% render 'lazy_src', image: icon.settings.image %}" />
          </div>
        {% endif %}
        <div class="heading text-center">
          {{ icon.settings.heading }}
        </div>
        <div class="text text-center">
          {{ icon.settings.text }}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<script>
  $(function() {
    $(document).ready(function() {
      $('html').removeClass('no-js');

      // Simple scroll animation
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate');
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('#our-quality .zoom-in').forEach(el => {
        observer.observe(el);
      });
    })
  })
</script>

{% schema %}
  {
    "name": "Our Quality",
    "settings": [
	  {
		"type": "richtext",
		"id": "heading",
		"label": "Heading"
	  },
	  {
		"type": "richtext",
		"id": "subheading",
		"label": "Subheading"
	  }
	],
	"blocks": [
	  {
		"type": "icon",
		"name": "Icon",
		"settings": [
		  {
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Heading"
		  },
		  {
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		  },
		  {
			"type": "richtext",
			"id": "text",
			"label": "Text",
			"default": "<p>Text</p>"
		  }
		]
	  }
	]
  }
{% endschema %}
