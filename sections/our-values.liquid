<style>
  #our-values {font-family: "Nexa"; padding-top: 2em; margin: 2em 0;}
  #our-values .heading {color: #0A0A0A; text-align: center; font-size: 1.286em; font-family: "Nexa"; font-style: italic; text-transform: none; line-height: 1.4em;}
  #our-values h2 {letter-spacing: normal; color: #0A0A0A; text-align: center; font-size: 3.214em; font-family: "Nexa"; font-weight: 800; text-transform: none; line-height: 1.4em; max-width: 12em; margin: 0 auto;}

  #our-values {position: relative; padding: {{section.settings.section_padding_desktop}}; background-color: {{section.settings.bg_color}};}
  #our-values .content {background-color: {{section.settings.text_bg_color}}; margin-top: 4em;}
  #our-values .title {color: {{section.settings.title_color}}; font-size: 3.25em; text-transform: none; margin: 0.3em 0;}
  #our-values .text {color: {{section.settings.text_color}}; margin-bottom: 3em; max-width: 450px;}
  #our-values .btn {color: {{section.settings.btn_color}}; background-color: {{section.settings.btn_bg}}; border: 2px solid {{section.settings.btn_bg}};}
  #our-values .btn:hover {background-color: {{section.settings.btn_hover_bg}}; border: 2px solid {{section.settings.btn_hover_bg}}; color: #ffffff;}
  #our-values .wrap {position: relative; max-width: {{section.settings.text_width}}em; padding: {{section.settings.text_padding_desktop}};}
  #our-values .image-text .img {width: 100%; height: 100%; background-size: cover; background-position: center; background-repeat: no-repeat;}
  #our-values p {color: inherit;}
  #our-values .text-heading {font-size: 1.286em; font-weight: 600; text-transform: uppercase; letter-spacing: normal;}  
  #our-values .text-subheading {letter-spacing: normal;}
  #our-values .img {width: 100%; height: 100%; max-height: 70%; background-size: cover; background-position: center; background-repeat: no-repeat;}

  @media all and (max-width: 1150px) {
    #our-values .wrap {padding-left: 0;}
  }
  @media all and (min-width: {{settings.breakpoint_tablet | plus: 1}}px){
    #our-values .text-adapts-to-image .img {padding-top: {{section.settings.image_height_desktop}};}
  }
  @media all and (max-width: {{settings.breakpoint_tablet}}) and (min-width: {{settings.breakpoint_mobile | plus: 1}}px){
    #our-values .text-adapts-to-image .img {padding-top: {{section.settings.image_height_tablet}};}    
  }
  @media all and (max-width: {{settings.breakpoint_mobile}}){
    #our-values {padding: {{section.settings.section_padding_mobile}};}
    #our-values .wrap {width: 100% !important; padding: {{section.settings.text_padding_mobile}};}
    #our-values .container {padding: 0;}
    #our-values .title {font-size: 1.7em;}
    #our-values .btn {width: 100%;}
    #our-values .img {padding-top: {{section.settings.image_height_mobile}};}
    #our-values h2 {font-size: 1.714em; max-width: 12em; line-height: 1.3em; margin-bottom: 1em;}
    #our-values .text-heading {font-size: 1em;}
    #our-values > .heading {font-size: 1.143em}
    #our-values .text {max-width: none; margin-bottom: 1.5em;}
	#image-slide-our-values {padding: 0 20px;}
    #our-values .content {margin-top: 2em}
  }
</style>

<section id="our-values">
  <div class="heading text-center">{{ section.settings.heading }}</div>
  <h2 class="subheading text-center">{{ section.settings.subheading }}</h2>
  <div {% unless section.settings.full_width %}class="container"{% endunless %}>
    <div class="grid-full content {{section.settings.image_position}} {% if section.settings.height == 'image' %}text-adapts-to-image align-items-center{% endif %}">
      {%- if section.settings.image != blank -%}
      <div class="grid__item image-wrap {{section.settings.image_width}} small--one-whole">
        <div id="image-slide-{{ section.id }}" style="height: 100%;">
          <div class="img lazyload" data-bgset="{% include 'lazy_src', image: section.settings.image %}"></div>
        </div>
      </div>
      {%- endif -%}
      <div class="grid__item wrapper flex-1 small--one-whole flex justify-content-{{section.settings.text_position}}">
        <div class="wrap text-{{section.settings.text_align}} small--text-{{section.settings.text_align_mobile}}">
          {%- if section.settings.title != "" -%}
          <h2 class="title custom_subtitle_font">{{section.settings.title}}</h2>
          {%- endif -%}
          {% for block in section.blocks %}
            <div class="text">
              <div class="text-heading">
                {{ block.settings.heading }}
              </div>
              <div class="text-subheading">
                {{ block.settings.subheading }}
              </div>              
            </div>
          {% endfor %}
          {%- if section.settings.button != "" -%}
          <a href="{{section.settings.link}}" class="btn custom_button_font">{{section.settings.button}}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Our Values",
    "settings": [
	  {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Values"
      },
	  {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "We like to keep it clean and transparent."
      },
	  {
      	"type": "header",
      	"content": "Content"
      },
      {
      	"type": "image_picker",
      	"id": "image",
      	"label": "Image"
      },
      {
      	"type": "textarea",
      	"id": "title",
      	"label": "Title",
      	"default": "Lorem ipsum dolor."
      },
      {
      	"type": "text",
      	"id": "button",
      	"label": "Button",
      	"default": "Button"
      },
      {
      	"type": "url",
      	"id": "link",
      	"label": "Link"
      },
      {
      	"type": "header",
      	"content": "Section Settings"
      },
      {
      	"type": "color",
      	"id": "bg_color",
      	"label": "Background Color",
      	"default": "#ffffff"
      },
      {
      	"type": "checkbox",
      	"id": "full_width",
      	"label": "Full Width?",
      	"default": true
      },
      {
      	"type": "text",
      	"id": "section_padding_desktop",
      	"label": "Section Padding (Desktop)",
      	"default": "0"
      },
      {
      	"type": "text",
      	"id": "section_padding_mobile",
      	"label": "Section Padding (Mobile)",
      	"default": "0"
      },
      {
      	"type": "select",
      	"id": "image_position",
      	"label": "Image Position",
      	"options": [
      		{"value": "normal", "label": "Left"},
      		{"value": "row-reverse", "label": "Right"}
      	],
      	"default": "normal"
      },
      {
      	"type": "select",
      	"id": "slide_image",
      	"label": "Slide Image Effect",
      	"options": [
      		{"value": "left", "label": "Slide Image From Left Side"},
      		{"value": "right", "label": "Slide Image From Right Side"}
      	],
      	"default": "left"
      },
      {
      	"type": "select",
      	"id": "image_width",
      	"label": "Image Width",
      	"options": [
      		{"value": "one-quarter", "label": "25%"},
      		{"value": "one-third", "label": "33.33%"},
      		{"value": "one-half", "label": "50%"},
      		{"value": "two-thirds", "label": "66.66%"},
      		{"value": "three-quarters", "label": "75%"}
      	],
      	"default": "one-half"
      },
      {
      	"type": "select",
      	"id": "height",
      	"label": "Section Height (Desktop)",
      	"options": [
      		{"value": "image", "label": "Text adapts to image"},
      		{"value": "text", "label": "Image adapts to text"}
      	],
      	"default": "text"
      },
      {
      	"type": "text",
      	"id": "image_height_desktop",
      	"label": "Image Height (Desktop)",
      	"default": "100%",
     	"info": "(If image adapts to text)"
      },
      {
      	"type": "text",
      	"id": "image_height_tablet",
      	"label": "Image Height (Tablet)",
      	"default": "100%",
      	"info": "(If image adapts to text)"
      },
      {
      	"type": "text",
      	"id": "image_height_mobile",
      	"label": "Image Height (Mobile)",
      	"default": "60%"
      },
      {
      	"type": "header",
      	"content": "Text Settings"
      },
      {
      	"type": "color",
      	"id": "text_bg_color",
      	"label": "Text Background Color",
      	"default": "#f5f5f5"
      },
      {
      	"type": "color",
      	"id": "title_color",
      	"label": "Title Color",
      	"default": "#000000"
      },
      {
      	"type": "color",
      	"id": "text_color",
      	"label": "Text Color",
      	"default": "#000000"
      },
      {
      	"type": "color",
      	"id": "btn_color",
      	"label": "Button Color",
      	"default": "#ffffff"
      },
      {
      	"type": "color",
      	"id": "btn_hover_bg",
      	"label": "Button Background Hover",
      	"default": "#000000"
      },
      {
      	"type": "color",
      	"id": "btn_bg",
      	"label": "Button Background",
      	"default": "#000000"
      },
      {
      	"type": "select",
      	"id": "text_position",
      	"label": "Text Position (Desktop)",
      	"options": [
      		{"value": "start", "label": "Left"},
      		{"value": "center", "label": "Center"},
      		{"value": "end", "label": "Right"}
      	],
      	"default": "center",
      	"info": "Within the Text column"
      },
      {
      	"type": "select",
      	"id": "text_align",
      	"label": "Text Alignment (Desktop)",
      	"options": [
      		{"value": "left", "label": "Left"},
      		{"value": "center", "label": "Center"},
     		{"value": "right", "label": "Right"}
      	],
      	"default": "left"
      },
      {
      	"type": "select",
      	"id": "text_align_mobile",
      	"label": "Text Alignment (Mobile)",
      	"options": [
      		{"value": "left", "label": "Left"},
      		{"value": "center", "label": "Center"},
      		{"value": "right", "label": "Right"}
      	],
      	"default": "center"
      },
      {
      	"type": "range",
      	"id": "text_width",
      	"min": 0,
      	"max": 100,
      	"step": 1,
      	"unit": "em",
      	"label": "Text Width",
      	"default": 40
      },
      {
      	"type": "text",
      	"id": "text_padding_desktop",
      	"label": "Text Padding (Desktop)",
      	"default": "3em 0"
      },
      {
      	"type": "text",
      	"id": "text_padding_mobile",
      	"label": "Text Padding (Mobile)",
      	"default": "3em 20px"
      }
	],
	"blocks": [
	  {
	  	"type": "text_block",
		"name": "Text Block",
		"settings": [
		  {
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Heading"
		  },
		  {
			"type": "richtext",
			"id": "subheading",
			"label": "Subeading",
			"default": "<p>Subheading</p>"
		  }
		]
	  }
	]
  }
{% endschema %}
