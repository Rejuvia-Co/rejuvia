{% style %}
    .founders-ingredients-section{
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 64px 35px 64px 35px;
    }

    @media(max-width: 900px){
        .founders-ingredients-section{
        padding: 40px 25px 20px 25px;
    }
        
    }

    .founders-ingredients-container {
        width: 100%;
      max-width: 1360px;
    }
    .founders-ingredients-container  h2 {
      font-size: 40px;
      font-weight: 700;
      line-height: 48px;
      margin-bottom: 25px;
      font-family: inherit;
    }

    .founders-testimonial-blocks {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .founders-testimonial-block {
        width: 49.3%;
        min-height: 368px;
        margin-bottom: 1.4vw;
        border-radius: 8px;
        overflow: hidden;
      display: flex;
      justify-content: space-between;
      background-color: {{section.settings.background_color}};
      padding: 20px;
      
    }

    .founders-testimonial-image {
      width: 40%;
      height: 100%;
      background-size: cover;
      background-position: center;
      border-radius: 4px;
    }

    .founders-testimonial-content{
        width: 54%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    
    @media(max-width: 1050px){
        .founders-testimonial-block {
            flex-direction: column;
            justify-content: flex-start;
            padding: 0px;
        }
        .founders-testimonial-image {
        width: 100%;
        height: 300px;
       
    }

    .founders-testimonial-content{
        width: 100%;
        padding: 30px 25px;
    }
    }

    @media(max-width: 700px){
        .founders-testimonial-block {
            min-width: 100%;
            margin-bottom: 2vw;
        }
        .founders-testimonial-image {
        width: 100%;
        min-height: 320px;
       
    }

    .founders-ingredients-container  h2 {
      text-align: center;
    }
    }


    .founders-testimonial-text {
      font-size: 24px;
      font-weight: 400;
      line-height: 33px;
      margin-bottom: 10px;
      
    }
    .founders-testimonial-name {
      font-weight: 700;
      font-size: 14px;
      line-height: 17px;
      text-transform: uppercase;
      margin-bottom: 5px;
      margin-top: 15px;
      
    }
    .founders-testimonial-role {
      font-size: 12px;
      font-weight: 400;
      line-height: 14px;
      text-transform: uppercase;
    }

    @media(max-width: 500px){
        .founders-testimonial-text {
      font-size: 20px;
    }
    .founders-ingredients-container  h2 {
      font-size: 32px;
      line-height: 38.4px;

    }

    }

  
{% endstyle %}


    <div id="ourners-ingredients" class="founders-ingredients-container">
      <h2>{{ section.settings.section_header }}</h2>
      <div class="founders-testimonial-blocks">
        {% for block in section.blocks %}
          <div class="founders-testimonial-block">
            <div class="founders-testimonial-image" style="background-image: url({{ block.settings.image | img_url: '300x300' }});"></div>
            <div class="founders-testimonial-content">
              <p class="founders-testimonial-text">{{ block.settings.testimonial }}</p>
              <p class="founders-testimonial-name">- {{ block.settings.name }}</p>
              <p class="founders-testimonial-role">{{ block.settings.role }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

  

{% schema %}
{
    "name": "Founders Ingredients",
    "class": "founders-ingredients-section",
    "settings": [
      {
        "type": "text",
        "id": "section_header",
        "label": "Section Header",
        "default": "Our Testimonials"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color Blocks",
        "default": "#f5f5f5"
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "testimonial",
            "label": "Testimonial"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "text",
            "id": "role",
            "label": "Role"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Founders Ingredients",
        "category": "Custom"
      }
    ]
  }
  
{% endschema %}