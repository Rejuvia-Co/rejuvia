<style>
  .pdp-middle-section {font-family: "Nexa"; padding: 2em 0 0;}
  .pdp-middle-section .icons-section {padding: 5em 0em;}
  .pdp-middle-section .icon-item {max-width: 15em; margin: 0 3em;}
  .pdp-middle-section .icon-item .heading {font-size: 1.286em; font-weight: 600; letter-spacing: 1px; text-transform: uppercase; max-width: 10em; padding: 2em 0;}
  .pdp-middle-section h2 {color: #000000; text-align: center; font-size: 1.786em; font-family: "Nexa"; font-weight: 800; font-style: normal; text-transform: none; line-height: 1.4em;}
  .pdp-middle-section .icon-item .text {color: #000000; font-size: 1em; letter-spacing: normal;}
  .pdp-middle-section .btn {background-color: #EAC78B; font-weight: 700; letter-spacing: normal; color: #000000; text-transform: none; border-radius: 2em; padding: 1.2em 4em;}
  
  @media all and (max-width: 900px) {
    .pdp-middle-section .icons-section {flex-direction: column; align-items: center;}
    .pdp-middle-section h2 {max-width: 19em; margin: 1em auto 0; font-size: 1.286em;}
    .pdp-middle-section .icon-item .heading {font-size: 1em; max-width: none; margin-top: 1em;}
    .pdp-middle-section .icon-item {max-width: 20em;}
  }
</style>

<section class="pdp-middle-section container">
  <h2>{{ section.settings.heading }}</h2>
  <div class="icons-section flex justify-content-center">
    {% for icon in section.blocks %}
      <div class="icon-item flex justify-content-start align-items-center direction-column">
        {% if icon.settings.image != nil %}
          <div class="image" data-aos="zoom-in">
            <img class="lazyload" data-sizes="auto" src="{% render 'image_placeholder', image: icon.settings.image %}" data-srcset="{% render 'lazy_src', image: icon.settings.image %}" />
          </div>
        {% endif %}
        <div class="heading text-center">
          {{ icon.settings.heading }}
        </div>
        <div class="text text-center">
          {{ icon.settings.text }}
        </div>
      </div>
    {% endfor %}
</section>

<script>
  $(function() {
    $(document).ready(function() {
      $('html').removeClass('no-js');
      AOS.init();
    })
  })
</script>

{% schema %}
  {
    "name": "PDP Middle Section",
    "settings": [
	  {
		"type": "richtext",
		"id": "heading",
		"label": "Heading"
	  },
	  {
		"type": "text",
		"id": "button_text",
		"label": "Button Text",
		"default": "Lab Reports"
	  },
	  {
		"type": "url",
		"id": "button_url",
		"label": "Button URL"
	  }
	],
	"blocks": [
	  {
		"type": "icon",
		"name": "Icon",
		"settings": [
		  {
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Heading"
		  },
		  {
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		  },
		  {
			"type": "richtext",
			"id": "text",
			"label": "Text",
			"default": "<p>Text</p>"
		  }
		]
	  }
	]
  }
{% endschema %}
