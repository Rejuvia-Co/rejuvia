            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Benefit Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Benefit description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Benefits (Static)",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "position": "left",
