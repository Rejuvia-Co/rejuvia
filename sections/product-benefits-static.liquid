  "name": "Product Benefits (Static)",
  "tag": "section",
  "class": "product-benefits",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Better Sleep Starts Tonight"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "color",
      "id": "dots",
      "label": "Dots Color",
      "default": "#B8A5D0"
    },
    {
      "type": "color",
      "id": "check_mark",
      "label": "Check Mark Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "check_bg",
      "label": "Check Background Color",
      "default": "#672666"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
