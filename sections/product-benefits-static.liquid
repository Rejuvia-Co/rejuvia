{{ 'product-benefits.css' | asset_url | stylesheet_tag }}

<section class="product-benefits-section" id="product-benefits-{{ section.id }}">
  <div class="product-benefits__container">
    <h2 class="product-benefits__heading">{{ section.settings.heading }}</h2>

    <div class="product-benefits__content">
      {%- comment -%} Left Benefits Column {%- endcomment -%}
      <div class="product-benefits__left">
        {%- for block in section.blocks -%}
          {%- if block.settings.position == 'left' -%}
            <div class="product-benefits__item" {{ block.shopify_attributes }}>
              <div class="product-benefits__item-header">
                <span class="product-benefits__checkmark" style="background-color: {{ section.settings.check_bg }};">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" style="fill: {{ section.settings.check_mark }};"/>
                  </svg>
                </span>
                <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
              </div>
              {%- if block.settings.description != blank -%}
                <p class="product-benefits__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- comment -%} Center Image {%- endcomment -%}
      <div class="product-benefits__image-container">
        <div class="product-benefits__decorative-dots" style="background-image: radial-gradient(circle, {{ section.settings.dots }} 1.5px, transparent 1.5px);"></div>
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 600 | image_tag: class: 'product-benefits__image', loading: 'lazy' }}
        {%- endif -%}
      </div>

      {%- comment -%} Right Benefits Column {%- endcomment -%}
      <div class="product-benefits__right">
        {%- for block in section.blocks -%}
          {%- if block.settings.position == 'right' -%}
            <div class="product-benefits__item" {{ block.shopify_attributes }}>
              <div class="product-benefits__item-header">
                <span class="product-benefits__checkmark" style="background-color: {{ section.settings.check_bg }};">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" style="fill: {{ section.settings.check_mark }};"/>
                  </svg>
                </span>
                <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
              </div>
              {%- if block.settings.description != blank -%}
                <p class="product-benefits__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Mobile Layout - All Benefits Stacked {%- endcomment -%}
    <div class="product-benefits__mobile-content">
      {%- for block in section.blocks -%}
        <div class="product-benefits__item" {{ block.shopify_attributes }}>
          <div class="product-benefits__item-header">
            <span class="product-benefits__checkmark" style="background-color: {{ section.settings.check_bg }};">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" style="fill: {{ section.settings.check_mark }};"/>
              </svg>
            </span>
            <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
          </div>
          {%- if block.settings.description != blank -%}
            <p class="product-benefits__description">{{ block.settings.description }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}

      {%- comment -%} Mobile Image {%- endcomment -%}
      {%- if section.settings.image != blank -%}
        <div class="product-benefits__image-container product-benefits__image-container--mobile">
          <div class="product-benefits__decorative-dots" style="background-image: radial-gradient(circle, {{ section.settings.dots }} 1.5px, transparent 1.5px);"></div>
          {{ section.settings.image | image_url: width: 600 | image_tag: class: 'product-benefits__image', loading: 'lazy' }}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
