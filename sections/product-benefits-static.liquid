{{ 'product-benefits.css' | asset_url | stylesheet_tag }}

<section class="product-benefits-section" id="product-benefits-{{ section.id }}">
  <div class="product-benefits__container">
    <h2 class="product-benefits__heading">{{ section.settings.heading }}</h2>

    <div class="product-benefits__content">
      {%- comment -%} Left Benefits Column {%- endcomment -%}
      <div class="product-benefits__left">
        {%- for block in section.blocks -%}
          {%- if block.settings.position == 'left' -%}
            <div class="product-benefits__item" {{ block.shopify_attributes }}>
              <div class="product-benefits__item-header">
                <span class="product-benefits__checkmark">
                  {% render 'checkmark' %}
                </span>
                <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
              </div>
              {%- if block.settings.description != blank -%}
                <p class="product-benefits__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- comment -%} Center Image {%- endcomment -%}
      <div class="product-benefits__image-container">
        <div class="product-benefits__decorative-dots">
          {% render 'dots' %}
        </div>
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 600 | image_tag: class: 'product-benefits__image', loading: 'lazy' }}
        {%- endif -%}
      </div>

      {%- comment -%} Right Benefits Column {%- endcomment -%}
      <div class="product-benefits__right">
        {%- for block in section.blocks -%}
          {%- if block.settings.position == 'right' -%}
            <div class="product-benefits__item" {{ block.shopify_attributes }}>
              <div class="product-benefits__item-header">
                <span class="product-benefits__checkmark">
                  {% render 'checkmark' %}
                </span>
                <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
              </div>
              {%- if block.settings.description != blank -%}
                <p class="product-benefits__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Mobile Layout - 2 Benefits, Image, 2 Benefits {%- endcomment -%}
    <div class="product-benefits__mobile-content">
      {%- comment -%} First 2 benefits (left position) {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- if block.settings.position == 'left' -%}
          <div class="product-benefits__item" {{ block.shopify_attributes }}>
            <div class="product-benefits__item-header">
              <span class="product-benefits__checkmark">
                {% render 'checkmark' %}
              </span>
              <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
            </div>
            {%- if block.settings.description != blank -%}
              <p class="product-benefits__description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}

      {%- comment -%} Mobile Image {%- endcomment -%}
      {%- if section.settings.image != blank -%}
        <div class="product-benefits__image-container product-benefits__image-container--mobile">
          <div class="product-benefits__decorative-dots">
            {% render 'dots' %}
          </div>
          {{ section.settings.image | image_url: width: 300 | image_tag: class: 'product-benefits__image', loading: 'lazy' }}
        </div>
      {%- endif -%}

      {%- comment -%} Last 2 benefits (right position) {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- if block.settings.position == 'right' -%}
          <div class="product-benefits__item" {{ block.shopify_attributes }}>
            <div class="product-benefits__item-header">
              <span class="product-benefits__checkmark">
                {% render 'checkmark' %}
              </span>
              <h3 class="product-benefits__title">{{ block.settings.title }}</h3>
            </div>
            {%- if block.settings.description != blank -%}
              <p class="product-benefits__description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  #product-benefits-{{ section.id }} .product-benefits__decorative-dots-svg {
    color: {{ section.settings.dots }};
  }

  #product-benefits-{{ section.id }} .product-benefits__checkmark {
    color: {{ section.settings.check_bg }};
  }

  #product-benefits-{{ section.id }} .product-benefits__checkmark-check {
    stroke: {{ section.settings.check_mark }};
  }

  #product-benefits-{{ section.id }} .product-benefits__decorative-dots::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: {{ section.settings.gradient_size }}%;
    aspect-ratio: 1;
    background: linear-gradient(258deg, {{ section.settings.gradient_1 }} -3.86%, {{ section.settings.gradient_2 }} 121.76%);
    border-radius: 50%;
    filter: blur({{ section.settings.gradient_blur }}px);
    z-index: 2;
    pointer-events: none;
  }
</style>

