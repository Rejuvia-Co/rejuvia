<style>
  .section_container {
    padding: 40px 16px;
    max-width: 1440px;
    margin: auto;
  }

  .product-comparison-section {
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .product-comparison-section .container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 64px;
    align-items: center;
  }

  .properties-column .feature-cell:first-child {
    border-radius: 0 0 6px 0;
    background-color: #672666;
}
  .product-comparison-section .section-heading {
    text-align: center;
    font-size: 40px;
    color: #171512;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
  }

  .comparison-table-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 5px;
    align-items: center;
  }

  .comparison-table {
    display: flex;
    width: 1000px;
    max-width: 100%;
    padding-bottom: 20px;
  }

  /* Properties Column (First Column) */
  .properties-column {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 200px;
  }

  .properties-column .header-cell {
    height: 117px;
    border-radius: 30px 0 0 0;
  }

  .properties-column .feature-cell {
    height: 65px;
    border: 1.2px solid #e4e4e4;
    border-right: none;
    border-top: 1.2px solid #e4e4e4;
    padding: 0 24px;
    display: flex;
    align-items: center;
    font-size: 16px;
    font-weight: 700;
    color: #672666;
    line-height: 1.4;
  }

  .properties-column .feature-cell:first-of-type {
    border-radius: 10px 0 0 0;
  }

  .properties-column .feature-cell:last-child {
    border-radius: 0 0 0 6px;
  }

  /* Product Columns */
  .product-columns {
    display: flex;
    gap: 0;
  }

  .product-column {
    width: 180px;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
  }

  /* Product Header */
  .product-header {
    height: 117px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding: 0 0 22px 0;
    gap: 20px;
  }

  .product-header .product-icon {
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-header .product-icon img {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain;
  }

  .product-header .product-name {
    font-size: 14px;
    font-weight: 700;
    color: #672666;
    text-align: center;
    line-height: 1.4;
  }

  /* Featured Column */
  .product-column.featured {
    /* background-color: #672666; */
    border-radius: 12px;
    padding-top: 5px;
    padding-bottom: 0;
    align-self: stretch;
    position: relative;
    z-index: 1;
  }
  .product-column.featured:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #672666;
    border-radius: 12px;
    z-index: -1;
    transform: translateY(20px);
  }
  .product-column.featured .product-header {
    height: 112px;
    padding-top: 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .product-column.featured .product-name {
    color: #FFFFFF;
  }

  .product-column.featured .feature-cell {
    /* background-color: #672666; */
    border:none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
  }

  /* Regular Product Columns */
  .product-column:not(.featured) .feature-cell {
    background-color: transparent;
    border-top: 1.2px solid #e4e4e4;
    border-bottom: 1.2px solid #e4e4e4;
    border-left: none;
    border-right: none;
    color: #171512;
  }

  /* Last Column Right Border and Corners */
  .product-column:last-child:not(.featured) .product-header {
    border-radius: 0 6px 0 0;
  }

  .product-column:last-child:not(.featured) .feature-cell {
    border-right: 1.2px solid #e4e4e4;
  }

  .product-column:last-child:not(.featured) .feature-cell:first-of-type {
    border-radius: 0 6px 0 0;
  }

  .product-column:last-child:not(.featured) .feature-cell:last-child {
    border-radius: 0 0 6px 0;
  }

  /* Feature Cells */
  .feature-cell {
    height: 65px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 12px;
    font-size: 14px;
    text-align: center;
    line-height: 1.5;
  }

  /* Icons */
  .icon-check,
  .icon-cross {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .icon-check {
    width: 24px;
    height: 24px;
    background-color: #672666;
  }

  .product-column.featured .icon-check {
    background-color: #FFFFFF;
  }

  .icon-check svg {
    width: 16px;
    height: 16px;
    fill: #FFFFFF;
  }

  .product-column.featured .icon-check svg {
    fill: #672666;
  }

  .icon-cross {
    width: 22px;
    height: 22px;
    border: 2px solid #672666;
    position: relative;
  }

  .icon-cross::before,
  .icon-cross::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 2px;
    background-color: #672666;
    top: 50%;
    left: 50%;
  }

  .icon-cross::before {
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .icon-cross::after {
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  /* Scroll Hint */
  .scroll-hint {
    display: none;
  }

  /* Scroll Progress Bar */
  .scroll-progress-bar {
    display: none;
    position: relative;
    width: 100%;
    height: 6px;
    background-color: #f0f0f0;
    border-radius: 10px;
    overflow: hidden;
    margin-top: 10px;
  }

  .scroll-progress-bar .progress-indicator {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: linear-gradient(90deg, #672666, #8e3d8d);
    border-radius: 10px;
    width: 0%;
    transition: width 0.1s ease-out;
    box-shadow: 0 0 8px rgba(103, 38, 102, 0.3);
  }

  /* Tablet Styles (768px - 999px) */
  @media all and (min-width: 768px) and (max-width: 999px) {
    .product-column {
      max-width: 140px;
      min-width: 100px;
      flex: 0 0 auto;
    }

    .product-header .product-name {
      font-size: 12px;
    }

    .feature-cell {
      font-size: 13px;
      padding: 0 10px;
    }
  }

