<style>
  .product-comparison-section {
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .product-comparison-section .container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
  }

  .product-comparison-section .section-heading {
    text-align: {{ section.settings.heading_alignment }};
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.2;
  }

  .comparison-table-wrapper {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .comparison-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: {{ section.settings.column_spacing }}px;
    margin: 0;
  }

  .comparison-table thead th {
    padding: {{ section.settings.header_padding }}px;
    text-align: center;
    vertical-align: top;
    background-color: {{ section.settings.header_bg_color }};
    border-radius: {{ section.settings.cell_border_radius }}px {{ section.settings.cell_border_radius }}px 0 0;
    {% if section.settings.enable_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    {% endif %}
  }

  .comparison-table thead th:first-child {
    background-color: transparent;
    box-shadow: none;
  }

  .comparison-table .product-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.header_icon_gap }}px;
  }

  .comparison-table .product-icon {
    width: {{ section.settings.product_icon_size }}px;
    height: {{ section.settings.product_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .comparison-table .product-icon img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .comparison-table .product-name {
    font-size: {{ section.settings.product_name_size }}px;
    font-weight: {{ section.settings.product_name_weight }};
    color: {{ section.settings.product_name_color }};
    text-align: center;
  }

  .comparison-table thead th.featured-column {
    background-color: {{ section.settings.featured_header_bg }};
    position: relative;
  }

  .comparison-table thead th.featured-column .product-name {
    color: {{ section.settings.featured_product_name_color }};
  }

  {% if section.settings.featured_badge_enabled %}
  .comparison-table thead th.featured-column::before {
    content: "{{ section.settings.featured_badge_text }}";
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    background-color: {{ section.settings.featured_badge_bg }};
    color: {{ section.settings.featured_badge_color }};
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    white-space: nowrap;
  }
  {% endif %}

  .comparison-table tbody tr {
    background-color: transparent;
  }

  .comparison-table tbody td {
    padding: {{ section.settings.cell_padding }}px;
    text-align: center;
    vertical-align: middle;
    font-size: {{ section.settings.cell_font_size }}px;
    color: {{ section.settings.cell_text_color }};
    background-color: {{ section.settings.cell_bg_color }};
    {% if section.settings.enable_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    {% endif %}
  }

  .comparison-table tbody td:first-child {
    text-align: left;
    font-weight: {{ section.settings.feature_name_weight }};
    color: {{ section.settings.feature_name_color }};
    background-color: transparent;
    box-shadow: none;
    font-size: {{ section.settings.feature_name_size }}px;
  }

  .comparison-table tbody td.featured-cell {
    background-color: {{ section.settings.featured_cell_bg }};
  }

  .comparison-table tbody tr:last-child td {
    border-radius: 0 0 {{ section.settings.cell_border_radius }}px {{ section.settings.cell_border_radius }}px;
  }

  .comparison-table tbody tr:last-child td:first-child {
    border-radius: 0;
  }

  .comparison-table .checkmark {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    background-color: {{ section.settings.checkmark_bg_color }};
    border-radius: 50%;
  }

  .comparison-table .checkmark svg {
    width: 60%;
    height: 60%;
    fill: {{ section.settings.checkmark_icon_color }};
  }

  .comparison-table .cross {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    background-color: {{ section.settings.cross_bg_color }};
    border-radius: 50%;
    opacity: 0.6;
  }

  .comparison-table .cross svg {
    width: 60%;
    height: 60%;
    fill: {{ section.settings.cross_icon_color }};
  }

  .comparison-table .empty-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    border: 2px solid {{ section.settings.empty_icon_border_color }};
    border-radius: 50%;
    opacity: 0.3;
  }

  .comparison-table .cell-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .comparison-table .main-text {
    font-weight: 600;
    font-size: {{ section.settings.main_text_size }}px;
    line-height: 1.3;
  }

  .comparison-table .sub-text {
    font-size: {{ section.settings.sub_text_size }}px;
    color: {{ section.settings.sub_text_color }};
    line-height: 1.3;
  }

  @media all and (max-width: {{ section.settings.mobile_breakpoint }}px) {
    .product-comparison-section {
      padding: {{ section.settings.mobile_section_padding }}px {{ section.settings.mobile_padding_horizontal }}px;
    }

    .product-comparison-section .section-heading {
      font-size: {{ section.settings.mobile_heading_size }}px;
      margin-bottom: {{ section.settings.mobile_heading_margin }}px;
    }

    .comparison-table {
      font-size: 11px;
      border-spacing: {{ section.settings.mobile_column_spacing }}px;
    }

    .comparison-table thead th,
    .comparison-table tbody td {
      padding: {{ section.settings.mobile_cell_padding }}px;
      font-size: 11px;
    }

    .comparison-table tbody td:first-child {
      font-size: 12px;
    }

    .comparison-table .product-icon {
      width: {{ section.settings.mobile_product_icon_size }}px;
      height: {{ section.settings.mobile_product_icon_size }}px;
    }

    .comparison-table .product-name {
      font-size: {{ section.settings.mobile_product_name_size }}px;
    }

    .comparison-table .checkmark,
    .comparison-table .cross,
    .comparison-table .empty-icon {
      width: {{ section.settings.mobile_icon_size }}px;
      height: {{ section.settings.mobile_icon_size }}px;
    }

    .comparison-table .main-text {
      font-size: {{ section.settings.mobile_main_text_size }}px;
    }

    .comparison-table .sub-text {
      font-size: {{ section.settings.mobile_sub_text_size }}px;
    }
  }
</style>

<div class="product-comparison-section">
  <div class="container">
    {% if section.settings.show_heading %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="comparison-table-wrapper">
      <table class="comparison-table">
        <thead>
          <tr>
            <th></th>
            {% for block in section.blocks %}
              {% if block.type == 'product_column' %}
                <th class="{% if block.settings.is_featured %}featured-column{% endif %}">
                  <div class="product-header">
                    {% if block.settings.product_icon %}
                      <div class="product-icon">
                        <img
                          src="{{ block.settings.product_icon | img_url: 'master' }}"
                          alt="{{ block.settings.product_name }}"
                          loading="lazy"
                        >
                      </div>
                    {% endif %}
                    <div class="product-name">{{ block.settings.product_name }}</div>
                  </div>
                </th>
              {% endif %}
            {% endfor %}
          </tr>
        </thead>
        <tbody>
          {% for feature_block in section.blocks %}
            {% if feature_block.type == 'feature_row' %}
              <tr>
                <td>{{ feature_block.settings.feature_name }}</td>

                {% assign column_index = 0 %}
                {% for product_block in section.blocks %}
                  {% if product_block.type == 'product_column' %}
                    {% assign column_index = column_index | plus: 1 %}
                    {% assign column_id = 'col_' | append: column_index %}
                    {% assign value_type_key = 'value_type_' | append: column_id %}
                    {% assign text_key = 'text_' | append: column_id %}
                    {% assign main_text_key = 'main_text_' | append: column_id %}
                    {% assign sub_text_key = 'sub_text_' | append: column_id %}
                    {% assign text_color_key = 'text_color_' | append: column_id %}

                    {% assign value_type = feature_block.settings[value_type_key] %}

                    <td class="{% if product_block.settings.is_featured %}featured-cell{% endif %}">
                      {% case value_type %}
                        {% when 'check' %}
                          <span class="checkmark">
                            <svg viewBox="0 0 24 24">
                              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                            </svg>
                          </span>

                        {% when 'cross' %}
                          <span class="cross">
                            <svg viewBox="0 0 24 24">
                              <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                            </svg>
                          </span>

                        {% when 'empty' %}
                          <span class="empty-icon"></span>

                        {% when 'text' %}
                          <div class="cell-content">
                            <span style="{% if feature_block.settings[text_color_key] != blank %}color: {{ feature_block.settings[text_color_key] }};{% endif %}">
                              {{ feature_block.settings[text_key] }}
                            </span>
                          </div>

                        {% when 'custom' %}
                          <div class="cell-content">
                            <span class="main-text" style="{% if feature_block.settings[text_color_key] != blank %}color: {{ feature_block.settings[text_color_key] }};{% endif %}">
                              {{ feature_block.settings[main_text_key] }}
                            </span>
                            {% if feature_block.settings[sub_text_key] != blank %}
                              <span class="sub-text">{{ feature_block.settings[sub_text_key] }}</span>
                            {% endif %}
                          </div>
                      {% endcase %}
                    </td>
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

