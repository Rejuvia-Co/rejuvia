<style>
  .section-choose_title {
    color: #171512;
    text-align: center;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 38.4px */
    letter-spacing: -0.32px;
    margin-bottom: 40px;
  }

  @media screen and (min-width: 750px) {
    .section-choose_title {
      font-size: 48px;
      letter-spacing: -0.528px;
    }
  }
</style>
<div class="section-choose-product index-section{% if section.settings.alt %} index-section--alt{% endif %}">

  <div class="container" >
    {%- if section.settings.title != blank -%}
      <header class="section-header" >
        <h2 class="section-choose_title appear-delay">
          {{ section.settings.title }}
        </h2>
<div class="sub-title">{{section.settings.sub_title}}</div>
      </header>
    {%- endif -%}

    <div class="grid-full ">
      {%- for block in section.blocks -%}
       {%- assign product_item = block.settings.featured_product -%}
       {%- assign product = all_products[block.settings.featured_product] -%}
        {% render 'product-custom-item' currentProduct: product, short_description: block.settings.short_description %}
      {%- endfor -%}
    </div>
  </div>

</div>



{% schema %}
  {
    "name": "Select Product",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }, {
        "type": "textarea",
        "id": "sub_title",
        "label": "Sub Heading",
        "default": "We've helped more than 100,000 customers finally start sleeping more and stressing less!"
      }
     
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "featured_product",
            "label": "Product"
          },
          {
            "type": "text",
            "id": "short_description",
            "label": "Short Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Select Product",
        "blocks": [
          {
            "type": "product"
          },
          {
            "type": "product"
          },
          {
            "type": "product"
          },
          {
            "type": "product"
          }
        ]
      }
    ]
  }
{% endschema %}
