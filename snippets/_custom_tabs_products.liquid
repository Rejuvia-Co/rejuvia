<style>
    #custom_tabs_product ul {
        list-style: none;
        padding: 0;
        margin: 0;
        margin-bottom: 0em;
    }
    
    #custom_tabs_product ul li {
        position: relative;  
        padding-top: 1em;
        margin: 0;
        border: none;
        border-top: 1px solid #B7B7B7;
        padding: 24px;
    }

    #custom_tabs_product ul li:last-child {
        border-bottom: 1px solid #B7B7B7;
    }

    /* #custom_tabs_product ul li .tab_content{
        margin-top: 1em;
    } */
    
    #custom_tabs_product ul li:nth-of-type(1) {
        animation-delay: 0.5s;
    }
    
    #custom_tabs_product ul li:nth-of-type(2) {
        animation-delay: 0.75s;
    }
    
    #custom_tabs_product ul li:nth-of-type(3) {
        animation-delay: 1s;
    }
    
    #custom_tabs_product ul li i {
        position: absolute;
        transform: translate(-6px, 0);
        margin-top: 10px;
        right: 0;
    }
    
    #custom_tabs_product ul li i:before,
    #custom_tabs_product ul li i:after {
        content: "";
        position: absolute;
        background-color: #2f358e;
        width: 2px;
        height: 10px;
    }
    
    #custom_tabs_product ul li i:before {
        transform: translate(0px, 0) rotate(90deg);
    }
    
    #custom_tabs_product ul li i:after {
        transform: translate(0px, 0) rotate(90deg);
    }
    
    #custom_tabs_product ul li input[type=checkbox] {
        position: absolute;
        cursor: pointer;
        width: 100%;
        height: 100%;
        z-index: 1;
        opacity: 0;
    }
    
    #custom_tabs_product ul li input[type=checkbox]:checked~div.tab_content {
        max-height: 0;
        opacity: 0;
        transform: translate(0, 50%);
    }

    #custom_tabs_product ul li input[type=checkbox]:not(:checked) ~div.tab_content {
        margin-top: 14px;
    }
    
    #custom_tabs_product ul li input[type=checkbox]:checked~i:before {
        transform: translate(0px, 0) rotate(90deg);
    }
    
    #custom_tabs_product ul li input[type=checkbox]:checked~i:after {
        transform: translate(0px, 0) rotate(0deg);
    }
    
    @keyframes flipdown {
        0% {
            opacity: 0;
            transform-origin: top center;
            transform: rotateX(-90deg);
        }
        5% {
            opacity: 1;
        }
        80% {
            transform: rotateX(8deg);
        }
        83% {
            transform: rotateX(6deg);
        }
        92% {
            transform: rotateX(-3deg);
        }
        100% {
            transform-origin: top center;
            transform: rotateX(0deg);
        }
    }
    
    .bg-ligth-blue {
        background-color: #f5f5f5;
    }
    
    .title-color {
        color: #000000;
    }
    
    .mb-70 {
        margin-bottom: 70px;
    }
    
    .sans--large {
        font-size: 40px;
        line-height: 44px;
    }
    
    #custom_tabs_product .custom-container {
        padding-top: 32px;
        max-width: 1370px;
        margin-left: auto;
        margin-right: auto;
    }
    
    #custom_tabs_product .custom-container {
        padding: 0 6rem;
    }
    
    .flex {
        display: flex;
    }
    
    .w-100 {
        width: 100%;
    }
    .w-400 {
        width: 35%;
    }
    
    .w-600 {
        width: 65%;
    }
    
    .p-20 {
        padding: 20px;
    }
    
    .img-shadow {
        box-shadow: -8px 10px 0px 2px #000000
    }
    
    #custom_tabs_product .section-padding {
        margin-top: 150px;
        padding-top: 140px;
        padding-bottom: 150px;
    }
    
    #custom_tabs_product .faq-title {
        font-size: 22px;
        font-weight: 600;
        margin: 0;
    }
    
    .pt-50 {
        padding-top: 50px;
    }
    
    @media(max-width:576px) {
        #custom_tabs_product .custom-container {
            padding: 0 1.2em;
        }
        .w-400 {
            width: 100%;
        }
        .w-600 {
            width: 100%;
        }
        .flex {
            display: block;
        }
        .pt-50 {
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 50px
        }
    }
  .tab_content img{max-width:100%;}
</style>

<section id="custom_tabs_product">
    <div class="custom-container flex">
        <div class="w-100">
            <ul>
                {% if product.metafields.tabs.key_benefits != blank %}
                    <li>
                        <input type="checkbox" checked>
                        <i></i>
                                              <h2 class="faq-title title-color">Ingredients</h2>
                      
                        <div class="title-color tab_content" style="font-size:16px;"> 
                          {% if product.metafields.custom.ingredients_image.value != blank %}
                            <img src="{{ product.metafields.custom.ingredients_image.value  | img_url: 'master'}}" />
                            {% else %}
                            {{product.metafields.tabs.ingredients}} 
                          {% endif %}
                        </div>
                    
                    </li>
                {% endif %}
                {% if product.metafields.tabs.directions_for_use != blank %}
                    <li>
                        <input type="checkbox" checked>
                        <i></i>
                        <h2 class="faq-title title-color">How To Use</h2>
                        <div class="title-color tab_content" style="font-size:16px;"> {{product.metafields.tabs.directions_for_use}} </div>
                    </li>
                {% endif %}
                {% if product.metafields.tabs.ingredients != blank %}
                    <li>
                        <input type="checkbox" checked>
                        <i></i>
                          <h2 class="faq-title title-color">Shipping</h2>
                        <div class="title-color tab_content" style="font-size:16px;"> {{product.metafields.tabs.key_benefits}} </div>
                    </li>
                {% endif %}
                {% if product.metafields.tabs.dosing != blank %}
                    <li>
                        <input type="checkbox" checked>
                        <i></i>
                        <h2 class="faq-title title-color">Dosing</h2>
                        <div class="title-color tab_content" style="font-size:16px;"> {{product.metafields.tabs.dosing}} </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</section>