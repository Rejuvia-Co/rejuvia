{% if template.name == 'index' %}
	{% render 'critical-css-index' %}
{% elsif template.name == 'product' %}
	{% render 'critical-css-product' %}
{% elsif template.name == 'collection' %}
	{% render 'critical-css-collection' %}
{% else %}
	{{ 'custom.min.css' | asset_url | stylesheet_tag }}
	{% comment %} {{ 'style.scss.css' | asset_url | stylesheet_tag }} {% endcomment %}
{% endif %}

<link rel="preload" href="{{ 'custom.min.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<link rel="preload" href="{{ 'style.scss.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">

{% comment %} Consolidated component CSS for performance {% endcomment %}
{% if template.name == 'index' %}
	<link rel="preload" href="{{ 'home-components.min.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
	<noscript><link rel="stylesheet" href="{{ 'home-components.min.css' | asset_url }}"></noscript>
{% elsif template.name == 'product' %}
	<link rel="preload" href="{{ 'pdp-components.min.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
	<noscript><link rel="stylesheet" href="{{ 'pdp-components.min.css' | asset_url }}"></noscript>
{% endif %}

