<div class="header header-drop ease-animation-slow hide {% if section.settings.drop_header %}large--show{% endif %} {% if section.settings.drop_header_mobile %}medium-down--show{% endif %}">
  {%- for block in section.blocks -%}
  {%- if block.type == 'utility_bar' -%}
  {%- include 'utility_bar' -%}
  {%- endif -%}
  {%- endfor -%}
  <div class="container">
    <div
      class="main-content flex flex-wrap justify-content-between align-items-end medium--justify-content-between small--justify-content-between">
      <div class="nav-wrapper  medium--hide small--hide">
        {%- for block in section.blocks -%}
        {%- if block.type == 'top_utils' -%}
        {%- if block.settings.show -%}
        <div class="utils-wrap flex justify-content-end align-items-center">
          {%- if block.settings.show_social -%}
          {%- include 'social_links' -%}
          {%- endif -%}
          {%- include 'top_utils' -%}
        </div>
        {%- endif -%}
        {%- endif -%}
        {%- endfor -%}
        <nav
          class="main-menu flex align-items-center justify-content-start medium-down--hide {{ section.settings.menu_font}}"
          role="navigation">
          {%- render 'menu_main', menu: section.settings.menu.links  -%}
        </nav>
      </div>


      <a href="/" class="logo">
        {%- if section.settings.logo != blank -%}
        <img src="{{section.settings.logo | img_url: '600x'}}" alt="{{shop.name}}" />
        {%- else -%}
        <div class="shop-name heading_font">{{shop.name}}</div>
        {%- endif -%}
      </a>

      <div class="navigator-mobile flex direction-row align-items-center large--hide">
        <a href="#" class="btn-open-mobile-menu">{% include 'icons', icon: 'hamburger', color: '#ffffff' %}</a>
        <!-- <a href="#">{% include 'dlicons', icon: 'search', color: '#ffffff' %}</a> -->
        <a href="#">{% include 'dlicons', icon: 'bag', color: '#ffffff' %}</a>
      </div>

      <div class="navigator navigator-right flex direction-row align-items-center justify-content-end small--hide medium--hide">
        <ul class=" flex direction-row align-items-center justify-content-end">
          {% if customer %}
          <li><a href="/account" title="">My Account</a></li>
          {% else %}
          <li><a href="/account/login" title="">Sign In</a></li>
          {% endif %}
          <li><a href="" title="">{% include 'dlicons', icon: 'bag', color: '#ffffff' %} <span style="color: rgb(255, 255, 255); background-color: rgb(0, 0, 0); padding: 0px; display: inline-block;font-size: 12px; line-height: 1.5em; margin-left: 0; width: 1.5em; height: 1.5em; position: relative; right: .4em; top: -.7em; text-align: center; border-radius: 10px; font-weight: 500;" class="count"></span></a></li>
        </ul>
      </div>
    </div>
  </div>
</div>