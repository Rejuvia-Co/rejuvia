{%- for link in menu -%}
  <div class="item custom_text_font {% if link.active %}active{% endif %}{% if link.links != blank %} has-dropdown{% endif %}"{% if link.links != blank %} aria-haspopup="true"{% endif %} data-parent="{{link.handle}}">
    <a href="{{ link.url }}" class="custom_text_font {% if link.active %}active-menu-item{% endif %}" {% if link.url == '#' %}onclick="return false;"{% endif %}>
      {{ link.title | escape }}{% render 'icons', icon: 'arrow-down' %}
    </a>
    {%- if link.links != blank -%}
    <div class="submenu">
      {%- for level2_link in link.links -%}
      <div class="item {% if level2_link.active %}active{% endif %} {% if level2_link.links != blank %}has-dropdown{% endif %}"{% if level2_link.links != blank %} aria-haspopup="true"{% endif %}>
        <a href="{{ level2_link.url }}" class="custom_text_font">{{ level2_link.title | escape }} {% include 'icons', icon: 'arrow-right' %}</a>
        {%- if level2_link.links != blank -%}
        <div class="submenu">
          {%- for level3_link in level2_link.links -%}
          <div class="item {% if level3_link.active %}active{% endif %}">
            <a href="{{ level3_link.url }}" class="custom_text_font">{{ level3_link.title | escape }}</a>
          </div>
          {%- endfor -%}
        </div>
        {%- endif -%}
      </div>
      {%- endfor -%}
    </div>
    {%- endif -%}
  </div>
{%- endfor -%}