<script src="https://cdn.rebuyengine.com/onsite/js/rebuy.js?shop={{ shop.permanent_domain }}" async></script>
<script>
const toggleChecked = (item) => {
  document.querySelector(`#switch-${item.id}`).disabled = true;
  setTimeout(() => document.querySelector(`#switch-${item.id}`).disabled = false, 5000);
  
  if (item.product.subscription){
    item.product.subscription_frequency = 'onetime';
    Rebuy.SmartCart.updateItemDeliveryFrequency(item);
  } else {
    Rebuy.SmartCart.updateItemDeliveryFrequency(item, Rebuy.SmartCart.selectedSubscriptionFrequency(item, 0), 'onetime');
  }
}
</script>