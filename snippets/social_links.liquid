<div class="social-links flex align-items-center justify-content-center">
  {%- if settings.instagram_link != '' -%}
      <a target="_blank" href="{{ settings.instagram_link }}" aria-label="Follow us on Instagram" title="Opens new window" rel="noopener">
        <img class="social-icon" src="//cdn.shopify.com/s/files/1/0264/4076/1399/t/35/assets/instagram.png?v=16022470498243670041639678693">
      </a>
  {%- endif -%}
